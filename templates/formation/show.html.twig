{% extends 'base.html.twig' %}

{% block title %}Formation
{% endblock %}

{% block body %}
	<h1>Formation</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Intitule</th>
				<td>{{ formation.intitule }}</td>
			</tr>
			<tr>
				<th>OF</th>
				<td>{{ formation.organisme }}</td>
			</tr>
			<tr>
				<th>Promotions</th>
				<td>
					<ul>
						{% for promotion in formation.promotions %}
							<li>
								<a href="{{path('app_promotion_show', {'id': promotion.id})}}">
									{{ promotion }} ({{promotion.candidats | length}} élèves)
								</a>
							</li>
						{% endfor %}
					</ul>
				</td>
			</tr>
		</tbody>
	</table>

	<a class='btn btn-primary' role='button' href="{{ path('app_formation_index') }}">Retour</a>

	<a class='btn btn-primary' role='button' href="{{ path('app_formation_edit', {'id': formation.id}) }}">Modifier</a>

	{{ include('formation/_delete_form.html.twig') }}
{% endblock %}
