{% extends 'base.html.twig' %}

{% block title %}Candidat{% endblock %}

{% block body %}
    <h1>Candidat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ candidat.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ candidat.prenom }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ candidat.mail }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ candidat.tel }}</td>
            </tr>
        </tbody>
    </table>

    <a class='btn btn-primary' role='button' href="{{ path('app_candidat_index') }}">Retour</a>

    <a class='btn btn-primary' role='button' href="{{ path('app_candidat_edit', {'id': candidat.id}) }}">Modifier</a>

    {{ include('candidat/_delete_form.html.twig') }}
{% endblock %}
