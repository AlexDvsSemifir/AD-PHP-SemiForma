                <td>
                    <a class='btn btn-primary' role='button' href="{{ path('app_session_show', {'id': session.id}) }}">DÃ©tail</a>
                    <a class='btn btn-primary' role='button' href="{{ path('app_session_edit', {'id': session.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class='btn btn-primary' role='button' href="{{ path('app_session_new') }}">Nouveau</a>
{% endblock %}
